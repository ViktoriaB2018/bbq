<h2>Изменение пароля</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="col-sm-5 no-padding">
    <div class="form-group">
      <%= f.label :password, "Новый пароль" %>
      <% if @minimum_password_length %>
        <em>(не менее <%= @minimum_password_length %> символов)</em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Подтверждение нового пароля" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "Изменить пароль", class: "btn btn-primary" %>
    </div>

    <%= render "devise/shared/links" %>
    <br>
  </div>
<% end %>
